<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.dao.mapper.WebContentMapper">
    
    <!-- 插入网页内容 -->
    <insert id="insert" parameterType="org.example.dao.pojo.WebContent">
        INSERT INTO web_content (collection_id, source_url, title, parsed_text, cover_image_path, summary, tags, media_type, create_time)
        VALUES (#{collectionId}, #{sourceUrl}, #{title}, #{parsedText}, #{coverImagePath}, #{summary}, #{tags}, #{mediaType}, #{createTime})
    </insert>
    
    <!-- 根据ID查询网页内容 -->
    <select id="selectById" parameterType="java.lang.Integer" resultType="org.example.dao.pojo.WebContent">
        SELECT * FROM web_content WHERE id = #{id}
    </select>
    
    <!-- 根据集合ID查询网页内容 -->
    <select id="selectByCollectionId" parameterType="java.lang.Integer" resultType="org.example.dao.pojo.WebContent">
        SELECT * FROM web_content WHERE collection_id = #{collectionId}
    </select>
    
    <!-- 更新网页内容 -->
    <update id="update" parameterType="org.example.dao.pojo.WebContent">
        UPDATE web_content
        <set>
            <if test="collectionId != null">collection_id = #{collectionId},</if>
            <if test="sourceUrl != null">source_url = #{sourceUrl},</if>
            <if test="title != null">title = #{title},</if>
            <if test="parsedText != null">parsed_text = #{parsedText},</if>
            <if test="coverImagePath != null">cover_image_path = #{coverImagePath},</if>
            <if test="summary != null">summary = #{summary},</if>
            <if test="tags != null">tags = #{tags},</if>
            <if test="mediaType != null">media_type = #{mediaType},</if>
            <if test="createTime != null">create_time = #{createTime}</if>
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除网页内容 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM web_content WHERE id = #{id}
    </delete>
</mapper>